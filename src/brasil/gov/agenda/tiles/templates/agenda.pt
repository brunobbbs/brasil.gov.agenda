<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="brasil.gov.tiles">
    <body tal:define="tile_id view/id;">
        <div class="agenda-tile"
             tal:attributes="id string:agenda-$tile_id">
            <tal:fields repeat="field view/get_configured_fields">
                <tal:title tal:define="htmltag python:field.get('htmltag', 'h1')"
                           tal:condition="python:field['id']=='title'">
                    <h1 tal:condition="python:htmltag=='h1'"
                        class="title">
                        ${view/data/title}
                    </h1>
                    <h2 tal:condition="python:htmltag=='h2'"
                        class="title">
                        ${view/data/title}
                    </h2>
                    <h3 tal:condition="python:htmltag=='h3'"
                        class="title">
                        ${view/data/title}
                    </h3>
                    <h4 tal:condition="python:htmltag=='h4'"
                        class="title">
                        ${view/data/title}
                    </h4>
                </tal:title>
                <tal:period tal:condition="python:field['id']=='period'">
                    <p class="period"><strong>${view/period}</strong></p>
                </tal:period>
                <tal:lastest_update tal:condition="python:field['id']=='lastest_update'">
                    <p class="latest-update">${view/lastest_update}</p>
                </tal:lastest_update>
                <tal:collection_events tal:condition="python:field['id']=='collection_events'">
                    <ul class="collection-events">
                        <li>
                            <span class="timestamp">11h56</span>
                            <a class="title-item" href="#">Lorem ipsum dolor sitam etcon setetur adipiscing volupt</a>
                        </li>
                        <li>
                            <span class="timestamp">11h56</span>
                            <a class="title-item" href="#">Lorem ipsum dolor sitam etcon setetur adipiscing volupt</a>
                        </li>
                        <li>
                            <span class="timestamp">11h56</span>
                            <a class="title-item" href="#">Lorem ipsum dolor sitam etcon setetur adipiscing volupt</a>
                        </li>
                    </ul>
                </tal:collection_events>
                <tal:agenda_tile_footer tal:condition="python:field['id']=='agenda_tile_footer'">
                    <div class="agenda-tile-footer">
                        <a href="${view/data/link_url}">${view/data/link_text}</a>
                    </div>
                </tal:agenda_tile_footer>
            </tal:fields>
        </div>
    </body>
</html>
