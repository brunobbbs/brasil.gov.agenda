<html xmlns="http://www.w3.org/1999/xhtml"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    metal:use-macro="context/main_template/macros/master">

    <metal:block fill-slot="content-core">


    <img tal:define="scale context/@@images"
         tal:replace="structure python: scale.scale('image',
                      scale='mini').tag(css_class='newsImage')" /><br />

		<span id="orgao" tal:content="view/orgao">Presidência da República</span><br />
		<span  id="data_dia" tal:content="view/weekday">Segunda-Feira</span><br />

        <span  id="data_longa" tal:content="view/long_date">14 de Outubro de 2013</span><br />
        <div
            class="portalMessage info"
            tal:condition="view/update_info"
            tal:content="view/update_info ">
            Alterada em ...
        </div>

        <br />
        <div id='compromissos'>
        	Compromissos do dia

        	<div class="compromisso"  tal:repeat="comp view/compromissos">
            <br />
        		<time class="horario"
        			  tal:attributes="datetime comp/start_date"
        			  tal:content="comp/start_time">12h00</time> <br />

        		<span class="titulo" tal:content="comp/title">Reunião com Dorneles Treméa</span> <br />

        		<span class="local"
        			tal:condition="comp/location"
        			tal:content="comp/location">Palácio do Planalto</span> <br />

            <span class="pauta"
              tal:condition="comp/description"
              tal:content="comp/description">Assunto a ser tratado</span> <br />

            <span class="participantes"
              tal:condition="comp/attendees"
              tal:content="comp/attendees">Dorneles Treméa</span> <br />

                <a tal:condition="view/editable"
                   class="compromisso acao editar_compromisso"
                   tal:attributes="href string:${comp/url}/edit"
                   i18n:translate="">Editar</a> <br />
                <a tal:condition="view/editable"
                   class="compromisso acao remover_compromisso"
                   tal:attributes="href string:${comp/url}/delete_confirmation"
                   i18n:translate="">Remover</a> <br />
                <a class="ical"
                   tal:attributes="href string:${comp/url}/ical_view"
                   i18n:translate="">ICAL</a> <br />
                <a class="vcal"
                   tal:attributes="href string:${comp/url}/vcal_view"
                   i18n:translate="">VCAL</a> <br />
        	</div>

          <div class="semcompromisso"  tal:condition="not:view/compromissos">
              <span>Sem compromissos oficiais</span>
          </div>

          <a tal:condition="view/editable"
             class="adicionar_compromisso"
             tal:attributes="href string:${context/absolute_url}/++add++Compromisso"
             i18n:translate="">Adicionar Compromisso</a>

        </div>
    <script>
      jQuery(function($){
        $('#compromissos a.acao').prepOverlay(
            {
                subtype: 'ajax',
                filter: common_content_filter,
                formselector: '#delete_confirmation',
                cssclass: 'overlay-compromisso',
                noform: function(el) {return $.plonepopups.noformerrorshow(el, 'redirect');},
                redirect: $.plonepopups.redirectbasehref,
                closeselector: '[name="form.button.Cancel"]',
                width:'50%'
            }
        );
      });
    </script>
    </metal:block>

</html>
